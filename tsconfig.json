{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6", // or "ESNext"
    "module": "commonjs",
    "experimentalDecorators": true, // Enable experimental decorators
    "emitDecoratorMetadata": true, // Emit metadata for decorators (needed by TypeORM)
    "strict": true, // Optional: enables all strict type-checking options
    "skipLibCheck": true, // Optional: skip type checking of declaration files
    "esModuleInterop": true, // Enable this flag
    "typeRoots": [
      "./node_modules/@types", // Include type definitions
      "./src/types"
    ]
  }
}
